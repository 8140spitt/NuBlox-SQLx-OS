{
  "name": "nublox_sqlx_os",
  "private": true,
  "version": "0.1.0",
  "description": "NuBlox SQLx â€” dialect-agnostic DBMS core + CLI (Phase 1)",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/@nublox/*"
  ],
  "scripts": {
    "test": "vitest run",
    "lint": "eslint \"packages/**/src/**/*.{ts,tsx}\"",
    "format": "prettier -w .",
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean",
    "dev": "pnpm -F @nublox/sqlx-cli run dev",
    "clean:dist": "find packages -type d -name dist -prune -exec rm -rf {} +",
    "clean:src": "find packages -type f -path '*/src/*' \\( -name '*.js' -o -name '*.d.ts' -o -name '*.js.map' -o -name '*.d.ts.map' \\) -delete",
    "clean:all": "pnpm run clean:dist && pnpm run clean:src"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^22.18.10",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "undici-types": "^7.16.0",
    "vitest": "^3.2.4"
  }
}